macro index,pager   <left>  '<enter-command>set index_format="%<[y?%<[m?%<[d?%[%H:%M  ]&%[%a %d ]>&%[%d %b ]>&%[%m/%y ]> %-15.15L %?M?(%1M)? %?y?[%.20Y] ?%s"<enter>'

set status_format = "New:%n/%M  flag:%F  tag:%t     %?V? Filter: %V? %> %s"

set date_format    = "!%a, %b %d, %Y at %I:%M:%S%p %Z"
